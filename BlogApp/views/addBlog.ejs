<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <form action="/blog/add-new" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="coverImage" required>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Title</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="title" required>
            </div>
            <div class="mt-3">
                <label for="form-label" class="form-label">Body</label>
                <textarea class="form-control" name="body" required></textarea>
            </div>
            <div class="form-floating">
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </div>
        </form>
    </div>

    <%- include("./partials/script") %>
</body>
</html>